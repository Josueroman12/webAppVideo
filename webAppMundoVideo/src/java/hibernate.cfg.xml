<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/MundoVideo</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="cr/ac/una/prograiv/video/domain/Categoria.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/video/domain/Pedido.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/video/domain/Detalle.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/video/domain/Imagen.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/video/domain/Peliculas.hbm.xml"/>
    <mapping resource="cr/ac/una/prograiv/video/domain/Usuario.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
